
/* default content coloring */

// compiled from LESS file default.css
.gradient (@startcolor; @endcolor; @default: @startcolor)
{
	/* gradients */
	background: @default; /* default for non-css3 browsers */
	background: -webkit-gradient(linear, left top, left bottom, from(@startcolor), to(@endcolor)); /* webkit */
	background: -moz-linear-gradient(top,  @startcolor,  @endcolor); /* mozilla */
}
.imgsprite (@x; @y; @width; @height)
{
	width:@width;
	height:@height;
	position: @x @y;
}
/* REDS */
@lighterblue: #6262ef;
@lightblue: #4343ec;
@normalblue: #1717e5;
@darkblue: #1212b7;
@darkerblue: #111199;

@postside: @darkerblue;
/* link colors */
@linkcolor: @normalblue;
@linkcolor-visited: @normalblue;
/* GREYS */
@white: #ffffff;
@lightgrey: #eeeeee;
@grey: #b3b9c0;
@mediumgrey: #272727;
@darkgrey: #111111;

/* useful classes... maybe i should do these in includes someday >.> */
.toprightradius (@radius: 15px) {
	-webkit-border-top-right-radius: @radius;
	-moz-border-radius-topright: @radius;
	border-top-right-radius: @radius;
}
.topleftradius (@radius: 15px) {
	-webkit-border-top-left-radius: @radius;
	-moz-border-radius-topleft: @radius;
	border-top-left-radius: @radius;
}
.bottomrightradius (@radius: 15px) {
	-webkit-border-bottom-right-radius: @radius;
	-moz-border-radius-bottomright: @radius;
	border-bottom-right-radius: @radius;
}
.bottomleftradius (@radius: 15px) {
	-webkit-border-bottom-left-radius: @radius;
	-moz-border-radius-bottomleft: @radius;
	border-bottom-left-radius: @radius;
}
.borderradius (@topleft: 0px; @topright: 0px; @bottomleft: 0px; @bottomright: 0px) {
	border-top-right-radius: @topleft;
	border-top-left-radius: @topright;
	border-bottom-right-radius: @bottomleft;
	border-bottom-left-radius: @bottomright;
}


.shadow {
	-moz-box-shadow: 2px 2px 7px #151515;
	-webkit-box-shadow: 2px 2px 7px #151515;
	box-shadow: 2px 2px 7px #151515;
}

body {
	//background: black;//@grey;
	.gradient(blue; black; #999);
